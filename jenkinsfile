pipeline {
agent any
environment {
PORT = 8027
}
stages {
stage('build client') {
steps {
script {
echo 'Building Client'
docker build -t bar-client

}
}
}
stage('building server') {
steps {
cd server
echo 'building docker image'
docker build -t server

}
}
stage('deploy server') {
steps {
script {
echo 'deploying'
}
}
}

stage('health check') {
steps {
echo 'health check:)'
sh """
wget http://localhost:$PORT/api/health;
if [ \$? = 0 ];
then echo SUCCESS;
else echo FAILED:\\(;
fi
"""
}
}
}
}
