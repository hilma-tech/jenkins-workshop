pipeline {
    agent any
    environment {
        PORT = 8077
    }
    stages {
        stage('build client') {
            steps {
                script {
                    sh '''
                    building client
                    cd client
                    docker image build -t client .
                    docker run --name yehonatan client:latest
                    docker cp yehonatan:app/build ../server/client-build
                    '''
                }
            }
        }
        stage('building server') {
            steps {
                sh """
cd server
echo building docker image
docker image build -t server .
docker run -d -p$PORT:8000 --name yehonatan server:latest
"""
            }
        }

        stage('health check') {
            steps {
                echo 'health check:)'
                sh """
wget http://localhost:$PORT/api/health;
if [ \$? = 0 ];
then echo SUCCESS;
else echo FAILED:\\(;
fi
"""
            }
        }
    }
}
/*  */
