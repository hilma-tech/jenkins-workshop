pipeline {
agent any
environment {
PORT = 8027
}
stages {
stage('build client') {
steps {
script {
    sh'''
    cd client
echo 'Building Client'
docker build -t client .
docker run --name bar client:latest
docker cp bar:app/build ../server/client-build
'''
}
}
}
stage('building server') {
steps {
    sh'''
cd server
echo 'building docker image'
docker build -t server
docker run -d -p 8027:8000 --name bar server:latest
'''
}
}
stage('deploy server') {
steps {
script {
echo 'deploying'
}
}
}

stage('health check') {
steps {
echo 'health check:)'
sh """
wget http://localhost:$PORT/api/health;
if [ \$? = 0 ];
then echo SUCCESS;
else echo FAILED:\\(;
fi
"""
}
}
}
}
