pipeline {
    agent any
    environment {
        PORT = 8043
    }
    stages {
        stage('build client') {
            steps {
                script {
                    echo 'Building Client'
                    sh '''
                    cd client
                    docker build -t korenClient .
                    docker run --name korenContainer korenClient:latest
                    docker cp korenContainer:app/build ./server/client-build
                    '''
                }
            }
        }
        stage('building server') {
            steps {
                sh '''
cd server
docker build -t ./server .
docker run -d -p 8043:8000 -n korenContainer ./server
'''
            }
        }
        stage('deploy server') {
            steps {
                script {
                    echo 'deploying'
                }
            }
        }

        stage('health check') {
            steps {
                echo 'health check:)'
                sh """
wget http://localhost:$PORT/api/health;
if [ \$? = 0 ];
then echo SUCCESS;
else echo FAILED:\\(;
fi
"""
            }
        }
    }
}
