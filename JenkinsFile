pipeline {
    agent any
    environment {
        PORT = 8071
    }
    stages {
        stage('build client') {
            steps {
                script {
                    echo 'Building Client'
                    sh '''
                    cd client
                    docker build -t ofekClient .
                    docker run --name ofekClientContainer ofekClient:latest
                    docker cp ofekClientContainer:app/build ../server/client-build
                    '''
                }
            }
        }
        stage('building server') {
            steps {
                sh """
                cd server
                echo building docker image
                docker build -t ofekServer .
                docker run -d -p$PORT:8000 --name ofekServerContainer ofekServer:latest
                """
            }
        }
        stage('deploy server') {
            steps {
                script {
                    echo 'deploying'
                }
            }
        }

        stage('health check') {
            steps {
                echo 'health check:)'
                sh """
wget http://localhost:$PORT/api/health;
if [ \$? = 0 ];
then echo SUCCESS;
else echo FAILED:\\(;
fi
"""
            }
        }
    }
}

